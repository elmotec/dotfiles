[dotfiles]
repository = .  # current directory.
ignore =
    *.bak
    *.log
    *.orig
    *.pyc
    *.swp
    .bash_history
    .dotfilesrc
    .git/
    .gitalttributes
    .gitignore
    .gitmodules
    .inputrc
    .ipython
    .pylint.d
    .pypirc
    .pytest_cache
    .sqldeveloper
    .ssh
    .unison/ar*
    .unison/fp*
    .vft*
    .viminfo
    AppData/
    README.md
    README.rst
    __pycache__
    dotfiles.py
    manage.py
    test_manage.py
    venv/
    AppData/
# directories to be symlinked directly.
linked_dirs =
    .vim
    .config/nvim
    .config/clangd
    .config/git
difftool = nvim -d "{}" "{}"
