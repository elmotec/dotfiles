[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[core]
    filemode = false
    eol = lf
[commit]
    verbose = true
[init]
    defaultBranch = main
[format]
    pretty = %C(auto,cyan)%h%C(auto,magenta)% G? %C(auto)%>(17,trunc)%ad %C(auto,green)%<(8,trunc)%al%C(auto,reset)%>(60,trunc)%s%C(auto)% gD% D
[log]
    date = human
[alias]
    br = branch -v
    br-clean = branch -d $(git branch --merged=main | grep -v main)
    changelog = log --format='* %s%n%w(,4,4)%+b' --no-merges
    c = commit
    co = checkout
    cp = cherry-pick
    cp-c = cherry-pick --continue
    cp-s = cherry-pick --skip
    d = diff
    fetchmain = fetch upstream main:main
    p-rbas = pull --rebase --autostash
    p-rc = pull --recurse-submodules
    rb = rebase
    rb-c = rebase --continue
    rbm = rebase main
    s = status --short
    sm = submodule
    st = status
    sw = switch
    sw-rc = switch --recurse-submodule
    bl = blame -w
    blc = blame -w -C -C -C
    patch = cherry-pick --no-commit
[diff]
    tool = nvim -d
[mergetool "fugitive"]
    cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
    keepBackup = false
[merge]
    tool = fugitive
